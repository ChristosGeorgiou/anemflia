{{>_start}}

<!-- Navigation-->
{{>navigation}}

<!-- Masthead-->
{{>masthead}}

<section class="page-section" id="rooms">
  <div class="container px-4 px-lg-5">
    <h2 class="text-center mt-0">{{intro.first}}</h2>
    <p class="text-center">{{intro.second}}</p>
    <hr class="divider" />
  </div>
  <div class="row room">
    <div class="col-6 room-img">
      <img src="{{rooms.0.image}}" alt="">
    </div>
    <div class="col-6 room-content">
      <h3>{{rooms.0.name}}</h3>
    </div>
  </div>
</section>

<section class="page-section" id="team">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-lg-8 text-center">
        <h2 class="mt-0">Team</h2>
        <hr class="divider divider-dark" />
        <div class="row gx-4 gx-lg-5">
          <div class="col-lg-3 col-md-6 text-center">
            <div class="mt-5 mb-4">
              <img src="/public/avatars/ip.jpg" class="avatar" alt="">
            </div>
            <h3 class="h4 mb-2">Johnana</h3>
            <p class="text-muted mb-0">Managing your reservation and be your first contact</p>
          </div>
          <div class="col-lg-3 col-md-6 text-center">
            <div class="mt-5 mb-4">
              <img src="/public/avatars/np.jpg" class="avatar" alt="">
            </div>
            <h3 class="h4 mb-2">Nikos</h3>
            <p class="text-muted mb-0">Your local friend that will make sure you have a pleasant stay</p>
          </div>
          <div class="col-lg-3 col-md-6 text-center">
            <div class="mt-5 mb-4">
              <img src="/public/avatars/ng.jpg" class="avatar" alt="">
            </div>
            <h3 class="h4 mb-2">Nefeli</h3>
            <p class="text-muted mb-0">Creating the beautifull place that you will stay</p>
          </div>
          <div class="col-lg-3 col-md-6 text-center">
            <div class="mt-5 mb-4">
              <img src="/public/avatars/cg.jpg" class="avatar" alt="">
            </div>
            <h3 class="h4 mb-2">Christos</h3>
            <p class="text-muted mb-0">Finding new ideas and exploring next things</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Footer-->
{{>footer}}

{{>_end}}