<header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="title font-weight-bold">{{intro.first}}</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <a class="btn btn-primary btn-xl" href="call:{{global.contact.phone}}">
                    {{intro.call}}</a>
            </div>
            <div class="col-lg-8 align-self-baseline">
                <div class="d-flex align-items-center">
                    <a href="{{global.social.facebook}}" title="Facebook" target="_blank">
                        <span class="fab fa-facebook"></span>
                    </a>
                    <a href="{{global.social.instagram}}" title="Instagram" target="_blank">
                        <span class="fab fa-instagram"></span>
                    </a>
                    <a href="{{global.social.tripadvisor}}" title="Trip Advisor" target="_blank">
                        <span class="fab fa-tripadvisor"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>